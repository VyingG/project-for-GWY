body
	padding-bottom 60px
	background-color #EFEFF4

.headnav
	width 100%
	height 50px
	background-color white
	border-bottom 1px solid #D6D7DC

.headnav>.navname
	display block
	line-height 50px
	text-align center
	font-size 18px

.appointlist
	width 100%
	height 120px
	background-color white
	border-bottom 1px solid #D6D7DC
	margin-top 10px

.appointlist>.apthsimg
	width 35%
	height 120px
	float left

.apthsimg>img
	display block
	width 120px
	height 80px
	margin 0 auto
	margin-top 20px

.appointlist>.apthsinfo
	width 65%
	height 100px
	padding 10px 0
	float left
	position relative

.apthsinfo>span
	display block
	padding 0 8px

.apthsinfo>.greet
	font-size 14px
	color #646464
	line-height 25px

.apthsinfo>.content
	padding-top 5px
	font-size 14px
	color #646464
	text-indent 20px

.apthsinfo>.time
	font-size 12px
	color #FF9D42
	line-height 25px

.apthsinfo>.getaptbtn
	display block
	width 50px
	height 20px
	background-color #EA5404
	border-radius 5px
	text-align center
	line-height 20px
	font-size 14px
	color white
	position absolute
	bottom 10px
	right 5%

.apthsinfo>.statue
	font-size 12px
	color #646464
	display block
	position absolute
	bottom 10px
	right 5%

.apthsinfo>.posttime
	position absolute
	top 10px
	right 5%

.posttime>img
	width 12px
	height 12px
	vertical-align middle

.posttime>span
	line-height 12px
	font-size 12px
	color lightgray
	